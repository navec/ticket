	"dependencies": {
		"core": "file:../core",
		"express": "^4.21.1",
		"module-alias": "^2.2.3",
		"reflect-metadata": "^0.2.2"
	},
	"_moduleAliases": {
		"@business": "dist/business",
		"@presentation": "dist/presentation",
