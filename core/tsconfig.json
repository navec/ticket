{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"composite": true,
		"incremental": true,
		"rootDir": "src",
		"outDir": "dist",
		"declaration": true,
		"types": ["node", "jest"],
		"paths": {
			"@core/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/__tests__"]
}
